        cout << "4. Wrt" << endl;
        
        ofstream ovf;
        
        switch(swt)
        {
            case 1:
            {
                ofv.open("A.dat", ios_base::app);
                Add(uf);
                ofv << uf;
            }
            case 2:
            {
                
            }
            case 3:
            {
                
            }
            case 4:
            {
                
            }
            case 5:
            {
                
                
            }
        }
    } while (swt != 1);
}
