#include <iostream>
#include <fstream>

using namespace std;

struct vps
{
    string fio;
    string nUn;
    string fac;
    string spc;
    int age;
}

vps Add(vps uf)
{
    cout << "FIO: "; cin >> uf.fio;
    cout << "University: "; cin >> uf.nUn;
    cout << "Faculty: "; cin >> uf.fac;
    cout << "Specialty: "; cin >> uf.spc;
    cout << "Age: "; cin >> uf.age;
    return uf;
}

