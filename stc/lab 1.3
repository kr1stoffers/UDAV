#include <iostream>

using namespace std;

struct vps
{
    string fio;
    string nUn;
    string fac;
    string spc;
    int age;
};

int main()
{
    vps arr[20];
    int swt, len = 0;
  
    do
    {
        int i = 18;
        cout << "\n1. Add" << endl;
        cout << "2. Del" << endl;
        cout << "3. Length" << endl;
        cout << "0. End" << endl;
        cin >> swt;
        
        switch(swt)
        {
            case 1:
            {
                for (int f = 0; f < 19; f++)
                {
                    arr[i+1] = arr[i];
                    i--;
                }
                cin.ignore();
                cout << "FIO: "; getline(cin, arr[0].fio); 
                cout << "University: "; cin >> arr[0].nUn; 
                cout << "Faculty: "; cin >> arr[0].fac;    
                cout << "Specialty: "; cin >> arr[0].spc;  
                cout << "Age: "; cin >> arr[0].age;  
                
                len++;
                break;
            }
            
            case 2:
            {
                arr[len-1].fio = ""; 
                arr[len-1].nUn = "";
                arr[len-1].fac = "";
                arr[len-1].spc = "";
                arr[len-1].age = 0;
                
                len--;
                break;
                
            }
            case 3:
            {
                cout << len << endl;
                break;
            }
        }
    } while (swt != 0);
}
