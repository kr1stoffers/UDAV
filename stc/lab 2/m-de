#include <iostream>
#include <cstring>

using namespace std;

void arrFill(char* arr)
{
    srand(time(NULL));
    char randomCh1[10], randomCh2[2];
    for (int i = 0; i < 100; i++)
    {
        randomCh1[0] = char(97 + rand()%26);
        randomCh2 = char(97 + rand()%26);
        strcat(randomCh1, randomCh2);
        arr[i] = randomCh1;
    }
}

